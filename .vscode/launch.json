{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug with TS",
        "type": "node",
        "request": "launch",
        "runtimeArgs": ["-r", "ts-node/register"],
        "args": ["${workspaceFolder}/src/index.ts"]
      },
      {
        "name": "Run Build Output",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/dist/index.js"
      }
    ]
  }